<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.activity.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/banner_title_03" />
        <com.hanboard.teacher.common.view.Rotate3DCircleLayout
            android:id="@+id/rotatelayout"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/banner_1"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:elevation="6dp"></ImageView>

            <ImageView
                android:id="@+id/banner_2"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:elevation="6dp"></ImageView>

            <ImageView
                android:id="@+id/banner_3"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:elevation="6dp"></ImageView>
        </com.hanboard.teacher.common.view.Rotate3DCircleLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="#f2f2f2" />

        <TextView
            android:id="@+id/editText2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/search_edt_bg"
            android:drawableRight="@mipmap/huise_search_03"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/edt_search"
            android:textColor="#cacaca"
            android:textColorHint="#cacaca"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/main_btn_start_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gongneng_03" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/home_tv_startClass"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@mipmap/hongse_yuan_03"
                android:gravity="center"
                android:text="开始授课"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@mipmap/huanse_yuan_03"
                android:gravity="center"
                android:text="学生管理\n待开发"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/txt_home_word"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@mipmap/lvse_yuan_03"
                android:gravity="center"
                android:text="单词通"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/txt_home_teaching_preparation"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@mipmap/lanse_yuan_03"
                android:gravity="center"
                android:text="备课中心"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
 <!--左边导航栏-->
    <ListView
        android:background="@color/white"
        android:layout_gravity="start"
        android:id="@+id/activity_home_leftMenu"
        android:entries="@array/menu"
        android:layout_width="200dp"
        android:layout_height="match_parent"></ListView>
</android.support.v4.widget.DrawerLayout>
